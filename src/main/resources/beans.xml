<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="person" class="me.dapac.beans.Person">
        <property name="id" value="1"></property>
        <property name="name" value="Daniel"></property>
        <property name="nickname" value="dandrspc"></property>
        <property name="country">
            <bean id="country" class="me.dapac.beans.Country">
                <property name="name" value="Colombia"></property>
                <property name="city">
                    <bean id="city" class="me.dapac.beans.City">
                        <property name="name" value="Cali"></property>
                    </bean>
                </property>
            </bean>
        </property>
    </bean>


</beans>